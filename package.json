{
  "private": true,
  "workspaces": {
    "packages": [
      "gluco-check-*"
    ],
    "nohoist": [
      "**/gts",
      "**/gts/**",
      "doctoc"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn workspaces run lint",
      "post-merge": "yarn workspace gluco-check-common build"
    }
  },
  "scripts": {
    "deploy": "yarn workspace gluco-check-webhooks deploy",
    "purge": "yarn workspaces run purge && rimraf node_modules/ && echo Run yarn to reinstall dependencies.",
    "build": "yarn workspaces run build",
    "test": "yarn build && yarn workspaces run test"
  },
  "devDependencies": {
    "husky": "^4.3.6",
    "rimraf": "^3.0.2"
  }
}
